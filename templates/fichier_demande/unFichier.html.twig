{% block body %}

    <h1>Fichier de {{ societe }}</h1>

    <br>

    <h2>Inserer les fichiers bilans </h2>

    <div class="p-5" style="width: 800px; background-color: whitesmoke">
        <table>
            <form action="" method="get" enctype="multipart/form-data">
                <table>
                    <tbody>
                    {% for fichier in bilans %}
                        <tr>
                            <td>{{ fichier.fichierBilan }}</td>
                            <td>
                                <input type="file" name="nom_fichier_bilan" class="form-control mt-2"/>
                                <br>
                            </td>
                            <td>
                                <label for="id_annee" class="text-right">Choisir une année</label>
                                <select id="id_annee" name="id_annee" class="form-control mt-2">
                                    {% for annee in annees %}
                                        <option value="{{ annee.getAnneeBilan() }}">{{ annee.getAnneeBilan() }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <input type="checkbox" name="verif" class="form-check-input"/>
                <button class="btn btn-dark" type="submit">Enregistrer</button>
            </form>


        </table>
    </div>
    <br><br>
    <h2>Liste des fichiers par bilans </h2> <br>
    {% for annee in annees %}
        <a class="btn btn-dark"  href="{{ path('mesFichiersBilan', {'id': annee.id, 'id_client': clients.id }) }}">Année {{ annee.anneeBilan }}</a>
